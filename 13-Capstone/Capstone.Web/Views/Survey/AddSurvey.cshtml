@model DailySurveyViewModel

@{
    ViewData["Title"] = "AddSurvey";
}

<h2>Daily Survey</h2>


<div class="row">
    <div class="col-md-4">
        <form asp-action="AddSurvey">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Survey.ParkName" class="control-label"></label>
                @Html.DropDownListFor(model => model.Survey.ParkCode, Model.SelectParkList, new { @class = "form-control" })
                <span asp-validation-for="Survey.ParkCode" class="text-danger"></span>
            </div>
                        
                        <div class="form-group">
                            <label asp-for="Survey.EmailAddress" class="control-label"></label>
                            <input asp-for="Survey.EmailAddress" class="form-control" />
                            <span asp-validation-for="Survey.EmailAddress" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Survey.State" class="control-label"></label>
                            @Html.DropDownListFor(model => model.Survey.State, Model.SelectStatesList, new { @class = "form-control" })
                            <span asp-validation-for="Survey.State" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Survey.ActivityLevel" class="control-label"></label>
                          
                                <label>@Html.RadioButtonFor(m => m.Survey.ActivityLevel, "inactive")inactive</label>
                                <label>@Html.RadioButtonFor(m => m.Survey.ActivityLevel, "sedentary")sedentary</label>
                                <label>@Html.RadioButtonFor(m => m.Survey.ActivityLevel, "active")active</label>
                                <label>@Html.RadioButtonFor(m => m.Survey.ActivityLevel, "extremely active")extremely active</label>
                           
                            <span asp-validation-for="Survey.ActivityLevel" class="text-danger"></span>
                        </div>
                         <div class="form-group">
                            <input type="submit" value="Vote" class="btn btn-default" />
                        </div>
                    </form>
                </div>
            </div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

}

