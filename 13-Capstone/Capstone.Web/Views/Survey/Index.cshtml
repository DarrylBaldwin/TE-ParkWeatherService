@model IEnumerable<DailySurvey>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<div>
    <button type="button" onclick="location.href='@Url.Action("AddSurvey", "Survey")'">
        Vote
    </button>
</div>
@*<p>
        <a asp-action="Create">Create New</a>
    </p>*@
<table class="table">
    <thead>
        <tr>
            <th>
                Park
            </th>

            <th>
                Rating
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @{string imageLocation = string.Concat(@"/images/parks/", @item.ParkCode, ".jpg");}
                    <a href="~/home/detail/@item.ParkCode"><img src="@imageLocation" /></a>

</td>
                <td>
                    <a href="~/home/detail/@item.ParkCode">@Html.DisplayFor(modelItem => item.ParkName)</a>
</td>

                <td>
                    @if (item.SurveyVote < 20)
                    {
                        @for (int star = 0; star < @item.SurveyVote; star++)
                        {
                            <span class="star">★</span>
                        }
                    }
                    else
                    {
                        <span class="star">item.SurveyVote ★s</span>
                    }
                </td>

            </tr>
        }
    </tbody>
</table>
